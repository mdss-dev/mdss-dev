/*
  Arquivo de configurações padrões para o VSCode.
  
  Algumas dessas configuraçoes dependem das extensões: ESLint, Prettier, Dracula Official 
  e vscode-icons.
  
  Também utiliza-se o Fira Code como fonte, para deixar os operadores mais 
  bonitos e fáceis de identificar.
*/
{
  // Gerais
  "workbench.colorTheme": "Dracula",
  "workbench.startupEditor": "newUntitledFile",
  "extensions.ignoreRecommendations": true,

  // Configura a identação para 2 espaços e habilita a formatação ao salvar
  "editor.tabSize": 2,
  "editor.formatOnSave": true,

  // Exibe uma identificação visual na linha em que o cursor estiver
  "editor.renderLineHighlight": "gutter",

  // Integrar o Prettier com o ESLint
  "prettier.eslintIntegration": true,


  // Adiciona o emmet em arquivos Javascript
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },

  // Habilita algumas funções do emmet no react.
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  }
}
